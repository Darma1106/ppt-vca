{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "allowJs": true,
    "types": ["node"],
    "paths": {
      "@/*": ["/components"],
      "root/*": ["/*"]
    },
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
